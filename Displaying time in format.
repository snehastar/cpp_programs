
#include <bits/stdc++.h> 

using namespace std;

class tim{
    int ti;
    public:
    int get_ti()
    {
    cin >> ti;
    return ti;
    };
};

int main()
{
     tim obj;
     int sec=obj.get_ti();
     int hours=sec/3600;
    int min=(sec%3600)/60;
    int secs= sec-((hours*3600)+(min*60));
    cout << hours << ':' << min << ':' << secs;

    return 0;
}
